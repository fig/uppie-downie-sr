<p id="notice"><%= notice %></p>

<%= button_to "UpVote", upvote_post_path(@post.to_global_id), data: {reflex: "click->Voting#upvote", post_id: @post.id }, onclick: "event.preventDefault()" %>

<p>
  <strong>Score:</strong>
  <span id="score">
    <%= @post.weighted_score %>
  </span>
</p>

<%= button_to "DownVote", downvote_post_path(@post.to_global_id), data: {reflex: "click->Voting#downvote", post_id: @post.id }, onclick: "event.preventDefault()" %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render partial: "devise" %>
